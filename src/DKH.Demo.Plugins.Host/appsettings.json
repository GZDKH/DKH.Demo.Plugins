{
  "Platform": {
    "Plugins": {
      "PluginsDirectory": "plugins",
      "AutoMigrate": true,
      "ContinueOnLoadError": true,
      "InitializationTimeoutSeconds": 30,
      "StateStoreType": "Json",
      "StateFileName": "plugin-state.json",
      "MaxAuditRecordsPerPlugin": 100
    },
    "Logging": {
      "MinimumLevel": "Information"
    },
    "Http": {
      "OpenApi": {
        "Enabled": true
      }
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5100"
      }
    }
  }
}
